            <button
              key={category}
              onClick={() => setActiveCategory(category)}
              className={`px-6 py-3 rounded-lg font-semibold transition-colors ${
                activeCategory === category 
                  ? 'bg-accent text-white' 
                  : 'bg-gray-800 text-gray-300 hover:bg-gray-700'
              }`}
