                <div className="text-accent text-2xl">‚úâÔ∏è</div>
                <div>
                  <h3 className="text-lg font-semibold mb-1">Email</h3>
                  <p className="text-gray-400">elorabethel125@gmail.com</p>
                  <p className="text-sm text-gray-500">Typically replies within 1 hour</p>
                </div>
              </div>

              <div className="flex items-start space-x-4">
                <div className="text-accent text-2xl">üì±</div>
                <div>
                  <h3 className="text-lg font-semibold mb-1">Telegram</h3>
                  <p className="text-gray-400">@6071876936</p>
                  <p className="text-sm text-gray-500">24/7 instant messaging support</p>
                </div>
              </div>

              <div className="flex items-start space-x-4">
                <div className="text-accent text-2xl">üïí</div>
